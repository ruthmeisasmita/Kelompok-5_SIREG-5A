import React, { useState } from 'react';
import { View, Text, TouchableOpacity, StyleSheet, Image, Button, ScrollView } from 'react-native';
import { FontAwesome } from '@expo/vector-icons';

const ProgresIpkSks = () => {
  const [sortOrder, setSortOrder] = useState('Terlama');

  const cards = [
    { id: 1, title: 'KRS Semester 1', imageUrl: 'https://storage.googleapis.com/a1aa/image/rBd9GZOWiZItD5iMGgheZUfEuYK6KYfP162p8MXzRuuBuLOnA.jpg' },
    { id: 2, title: 'KRS Semester 2', imageUrl: 'https://storage.googleapis.com/a1aa/image/rBd9GZOWiZItD5iMGgheZUfEuYK6KYfP162p8MXzRuuBuLOnA.jpg' },
    { id: 3, title: 'KRS Semester 3', imageUrl: 'https://storage.googleapis.com/a1aa/image/rBd9GZOWiZItD5iMGgheZUfEuYK6KYfP162p8MXzRuuBuLOnA.jpg' },
    { id: 4, title: 'KRS Semester 4', imageUrl: 'https://storage.googleapis.com/a1aa/image/rBd9GZOWiZItD5iMGgheZUfEuYK6KYfP162p8MXzRuuBuLOnA.jpg' },
  ];

  return (
    <ScrollView style={styles.container}>
      {/* Header */}
      <View style={styles.header}>
        <FontAwesome name="arrow-left" size={24} color="#f1c40f" />
        <Text style={styles.headerTitle}>Progres IPK & SKS Lulus</Text>
        <FontAwesome name="ellipsis-v" size={24} color="#a0a0a0" />
      </View>

      <View style={styles.divider} />

      {/* Tabs */}
      <View style={styles.tabs}>
        <Text style={styles.activeTab}>IPK</Text>
        <View style={styles.tabUnderline} />
      </View>

      {/* Sort Buttons */}
      <View style={styles.sort}>
        <Text style={styles.sortText}>Urutkan</Text>
        <TouchableOpacity
          style={[styles.sortButton, sortOrder === 'Terbaru' ? styles.inactiveSort : styles.activeSort]}
          onPress={() => setSortOrder('Terbaru')}
        >
          <Text style={styles.sortButtonText}>Terbaru</Text>
        </TouchableOpacity>
        <TouchableOpacity
          style={[styles.sortButton, sortOrder === 'Terlama' ? styles.activeSort : styles.inactiveSort]}
          onPress={() => setSortOrder('Terlama')}
        >
          <Text style={styles.sortButtonText}>Terlama</Text>
        </TouchableOpacity>
      </View>

      {/* Cards */}
      {cards.map((card) => (
        <View key={card.id} style={styles.card}>
          <Image source={{ uri: card.imageUrl }} style={styles.cardImage} />
          <View style={styles.cardContent}>
            <Text style={styles.cardTitle}>{card.title}</Text>
          </View>
          <TouchableOpacity style={[styles.cardButton, styles.viewButton]}>
            <Text style={styles.cardButtonText}>Lihat</Text>
          </TouchableOpacity>
          <TouchableOpacity style={[styles.cardButton, styles.deleteButton]}>
            <Text style={styles.cardButtonText}>Hapus</Text>
          </TouchableOpacity>
        </View>
      ))}
    </ScrollView>
  );
};

